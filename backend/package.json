{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "start": "node dist/server",
    "build": "tsc -b",
    "server": "nodemon server",
    "docker-dev": "docker-compose -f docker-compose.dev.yml up",
    "docker-dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker-prod": "docker-compose -f docker-compose.prod.yml up",
    "docker-prod:build": "docker-compose -f docker-compose.prod.yml up --build"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "dotenv": "^16.0.0",
    "nodemon": "^2.0.15",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.1.1",
    "@mikro-orm/core": "^5.2.0",
    "@mikro-orm/migrations": "^5.1.1",
    "@mikro-orm/postgresql": "^5.2.0",
    "express": "^4.18.1",
    "pg": "^8.7.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/micro-orm.config.ts",
      "./dist/config/mikro-orm.config.js"
    ]
  }
}
